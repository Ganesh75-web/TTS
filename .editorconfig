# This is the top-most .editorconfig file
root = true

# All Files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown Files
[*.md]
trim_trailing_whitespace = false

# YAML Files
[*.{yml,yaml}]
indent_size = 2

# JSON Files
[*.json]
indent_size = 2
